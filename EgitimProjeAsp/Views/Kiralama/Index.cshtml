@model List<Kiralama>



@if(TempData["basarili"]!=null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}




<div class="container">
    <div class="row pt-3 pb-4">
        <div>

            <h1>Kitap Kiralamaları</h1>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Öğrenci Id
                </th>
                <th>
                    Kitap Id
                </th>
              
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiralama in Model)
            {
                <tr>
                    <td>
                        @kiralama.Id
                    </td>

                    <td>@kiralama.OgrenciId</td>
                   
                    <td>
                        @kiralama.Kitap.KitapAdi
                    </td>
                
                    <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" class="btn btn-success" type="button" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" class="btn btn-danger" type="button" style="width:250px">Sil</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <div class="row pt-3 pb-2">

        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Kiralama Kaydı Oluştur
            </a>
        </div>
    </div>
</div>